<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <form class="form-group" action="/addgame" method="POST">
                <h3>Enter Your Bug Here:</h3>
                <label>Bug Name</label>
                <br>
                <input type="text" name="title" required>
                <br>
                <label>Type of Bug</label>
                <br>
                <input name = "type" class = "form-control"required></input>
                <br>
                <label>Location</label>
                <br>
                <input name = "loc" class = "form-control"required></input>
                <br>
                <label>Priority</label>
                <br>
                <input name = "priority" class = "form-control"required></input>
                <br>
                <label>Description of Bug</label>
                <br>
                <textarea name = "description" class = "form-control"required></textarea>
                <br>
                <label>Found by</label>
                <br>
                <input name = "found" class = "form-control"required></textarea>
                <br>
                <label>Progress of Bug</label>
                <br>
                <input name = "progress" class = "form-control"required></textarea>
                <br>
                <button type="submit" class = "btn btn-primary">Submit Bug</button>
            </form>
        </div>
    </div>
</div>